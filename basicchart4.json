{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  
    "description": "Basic 2010 Human Freedom by Country",
  
     "title": {
      "text": "As HDI changes, does GDP growth accelerate or deccelerate?",
      "subtitle":"",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
    
    "height": 300,
    "width": 345,
    "data": {"url": "MEGASHEET.csv"},


    "layer": [
    {"mark": {"type": "point", "color":"red", "point": false, "interpolate": "monotone"}},
    {"mark": {"type": "line", "color": "blue"}, 
        "transform": [{"regression": "HFI 2018", "on": "GDP-PPP-PC 2018", "method": "linear"}]}
  ],


    "encoding": {

      "x": {
        "field": "HFI-CHANGE",
        "type": "quantitative",
        "scale":{"domain":[-1.5, 1.5]},
        "axis": {
          "title": null,
          "grid": false,
          "labelSeparation": 20,
          "ticks": false
        }
      },
      "y": {
        "field": "PD-DIFF",
        "type": "quantitative",
        "title": "",
        "axis": {"grid": false}
      },
      "size": {
        "field": "POP 2018",
        "type": "quantitative"
      },
      "tooltip": {"field": "countries", "type": "nominal"}
    }
  }